FROM maxexcloo/debian:latest
MAINTAINER Max Schaefer <max@excloo.com>
ENV POSTGRESQL_DB NONE
ENV POSTGRESQL_USER docker
RUN apt-key adv --keyserver keyserver.ubuntu.com --recv-keys 7FCC7D46ACCC4CF8
RUN sed -i -e 's/http.debian.net/httpredir.debian.org/' /etc/apt/sources.list
RUN echo "deb http://apt.postgresql.org/pub/repos/apt/ wheezy-pgdg main" > /etc/apt/sources.list.d/postgresql.list
RUN apt-get update
RUN apt-get install -y postgresql-9.4
RUN echo "host all all 0.0.0.0/0 md5" >> /etc/postgresql/9.4/main/pg_hba.conf
RUN echo "host replication backup 0.0.0.0/0 md5" >> /etc/postgresql/9.4/main/pg_hba.conf
RUN sed -i -e "s/^#listen_addresses.*=.*/listen_addresses = '*'/" /etc/postgresql/9.4/main/postgresql.conf
RUN sed -i -e "s/^data_directory.*=.*$/data_directory = '\/data'/" /etc/postgresql/9.4/main/postgresql.conf
RUN sed -i -e "s/^#wal_level.*=.*/wal_level = hot_standby/" /etc/postgresql/9.4/main/postgresql.conf
RUN sed -i -e "s/^#max_wal_senders.*=.*/max_wal_senders = 1/" /etc/postgresql/9.4/main/postgresql.conf
ADD config /config
ADD supervisord.conf /etc/supervisor/conf.d/postgresql.conf
EXPOSE 5432
